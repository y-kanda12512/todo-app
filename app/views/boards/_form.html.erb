<%= form_with(model: board,local:true) do |f| %>
<div class="form-fields">
    <div class="field">
        <%= f.label :name,'Name' %>
        <%= f.text_field :name,class: 'form-input' %>
    </div>
    <div class="field">
        <%= f.label :description,'Description' %>
        <%= f.text_area :description,class: 'form-input form-textarea' %>
    </div>

    <%= f.submit 'Submit',class: 'form-submit' %>
</div>
<% end %>